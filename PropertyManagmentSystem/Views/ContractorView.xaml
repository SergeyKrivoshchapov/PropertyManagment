<UserControl x:Class="PropertyManagmentSystem.Views.ContractorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="6">
            <TextBlock Text="Арендаторы" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
            <ListBox ItemsSource="{Binding Contractors}" SelectedItem="{Binding SelectedContractor}" DisplayMemberPath="DisplayName" Height="300"/>
            <Button Content="Добавить" Command="{Binding AddContractorCommand}" Margin="0,8,0,0" Width="120"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="6">
            <TextBlock Text="Тип контрагента" FontWeight="Bold" Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Физическое лицо" IsChecked="{Binding IsIndividualSelected}" Margin="0,0,6,0"/>
                <RadioButton Content="Юридическое лицо" IsChecked="{Binding IsIndividualSelected, Converter={StaticResource BoolToVis}, ConverterParameter=invert}" />
            </StackPanel>

            <!-- Individual -->
            <GroupBox Header="Физическое лицо" Margin="0,8,0,0" Visibility="{Binding IsIndividualSelected, Converter={StaticResource BoolToVis}}">
                <StackPanel Margin="8">
                    <TextBox Text="{Binding IndividualPhone}" Margin="0,4"/>
                    <TextBox Text="{Binding IndividualFullName}" Margin="0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Width="80" Text="{Binding PassportSeries}" Margin="0,4"/>
                        <TextBox Width="100" Text="{Binding PassportNumber}" Margin="6,4"/>
                        <DatePicker SelectedDate="{Binding PassportIssueDate}" Margin="6,4"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Legal -->
            <GroupBox Header="Юридическое лицо" Margin="0,8,0,0" Visibility="{Binding IsIndividualSelected, Converter={StaticResource BoolToVis}, ConverterParameter=invert}">
                <StackPanel Margin="8">
                    <TextBox Text="{Binding LegalPhone}" Margin="0,4"/>
                    <TextBox Text="{Binding CompanyName}" Margin="0,4"/>
                    <TextBox Text="{Binding DirectorName}" Margin="0,4"/>
                    <TextBox Text="{Binding LegalAddress}" Margin="0,4"/>
                    <TextBox Text="{Binding TaxId}" Margin="0,4"/>
                    <TextBox Text="{Binding BankName}" Margin="0,4"/>
                    <TextBox Text="{Binding AccountNumber}" Margin="0,4"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Договоры арендатора" Margin="0,8,0,0">
                <StackPanel>
                    <ListBox ItemsSource="{Binding ContractorAgreements}" DisplayMemberPath="RegistrationNumber" Height="140"/>
                    <Button Content="Обновить телефон" Command="{Binding UpdatePhoneCommand}" Width="160" Margin="0,6,0,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>