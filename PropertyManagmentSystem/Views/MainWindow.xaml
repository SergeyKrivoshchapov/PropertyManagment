<Window x:Class="PropertyManagmentSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertyManagmentSystem.Views"
        xmlns:vms="clr-namespace:PropertyManagmentSystem.ViewModels"
        mc:Ignorable="d"
        Title="Система управления недвижимостью" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:BuildingViewModel}">
            <local:BuildingView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:ContractorViewModel}">
            <local:ContractorView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:AgreementViewModel}">
            <local:AgreementView />
        </DataTemplate>
    </Window.Resources>
    

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Меню навигации -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Здания" 
                        Command="{Binding ShowBuildingsCommand}"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="15,10"
                        FontSize="14"
                        Margin="5,0"/>

                <Button Content="Арендаторы" 
                        Command="{Binding ShowContractorsCommand}"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="15,10"
                        FontSize="14"
                        Margin="5,0"/>

                <Button Content="Договоры" 
                        Command="{Binding ShowAgreementsCommand}"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="15,10"
                        FontSize="14"
                        Margin="5,0"/>
            </StackPanel>
        </Border>

        <!-- Контентная область -->
        <ContentControl Grid.Row="1" 
                        Content="{Binding CurrentViewModel}"
                        Margin="10"/>
    </Grid>
</Window>